<div class="newmessage-content content">

    <div class="container">

      <div class="row">

        <div class="col-md-6 col-md-push-3 col-sm-8 col-sm-push-2 ">

          <div class="portlet">

            <h2 class="portlet-title">
              <u>New Message</u>
            </h2>

            <div class="portlet-body">
              <%= form_for @new_message, url: {action: "create"}, html: {id: "demo-validation", class: 'form parsley-form'} do |f| %>
                 <div class="form-group">
                  <% if @user.type =="BusinessOwner" %>
                    <p><label>Recipient:</label><%= f.select :customer_id, @recipient_list.keys, {}, { :class => 'form-control' }  %></p>
                  <% else %>
                    <p><label>Recipient:</label><%= f.select :business_owner_id, @recipient_list.keys, {}, { :class => 'form-control' }  %></p>
                    <% end %>
                </div> <!-- /.form-group -->

                <div class="form-group">
                  <%= f.text_area :text, size: "60x12", class: 'form-control' %>
                </div> <!-- /.form-group -->

                <div class="form-group">
                  <button type="submit" class="send-button btn btn-danger">SEND</button>
                </div> <!-- /.form-group -->

              </form>
              <% end %>

            </div> <!-- /.portlet-body -->

          </div> <!-- /.portlet -->

        </div> <!-- /.col -->

      </div> <!-- /.row -->

    </div> <!-- /.container -->



  </div> <!-- .content -->
