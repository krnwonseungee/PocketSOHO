<div id="inbox" ng-controller="inboxController">
	<div class="user-content">

	  <div class="banner"><h1>My Inbox</h1></div>

	  <!--<%= form_tag({controller: "conversations", action: "results"}, method: "post", id: "inbox-searchbar") do %>
	    <%= search_field( :convos, :results, placeholder: "Search messages by Name" ) %>
	  <% end %>-->

	  <%= link_to "Create New Message", new_user_conversation_path(@user.id) %>

	  <input type="search" placeholder="Search by name" id="inbox-searchbar" ng-model="test">
	  <h1>Hello {{test}}</h1>


	  <div id="message-list">
	    <table>
	    <% @recent_conversations.each do |message| %>
  	      <% if  message[:read_by_current_user] == true %>
	        <tr class="msg-row">
	      <% else %>
	        <tr style="font-weight:bold" class="msg-row">
	      <% end %>

	        <td class="msg-sender-col">
	          <%= message[:sender_name] %>
	        </td>
	        <td class="msg-date-col">
	          <%= message['updated_at'].strftime("%m/%d/%Y %I:%M%p") %>
	        </td>
	        <td class="msg-text-col">
	          <%= link_to user_conversation_path(@user, message['conversation_id']) do %>
	          <%= message[:abbrev_text]%>...
	          <% end %>
	        </td>
	      </tr>
	    <% end %>
	    </table>
	  </div>

	</div>
</div>
