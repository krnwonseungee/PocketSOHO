<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
<head>
  <title>Profile &middot; pocketSOHO</title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
  <meta name="description" content="PocketSOHO: My Dashboard - User Profile">

  <!-- Google Fonts -->
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,800,800italic">
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,300,700">

  <!-- Font Awesome  -->
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

  <!-- Bootstrap  -->
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

  <!-- App CSS -->
  <%= stylesheet_link_tag    "mvpready-admin"%>
  <%= stylesheet_link_tag    "mvpready-flat"%>
  <%= stylesheet_link_tag    "custom"%>
  <%= stylesheet_link_tag    "calendar"%>
  <%= stylesheet_link_tag    "custom_2"%>

<!-- jQuery & Angular  -->
  <%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js" %>
  <%= javascript_include_tag "http://code.jquery.com/ui/1.11.2/jquery-ui.js" %>
  <%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.js" %>

  <!-- Favicon -->
  <link rel="shortcut icon" href="./img/ico/favicon.png">
  <link rel="shortcut icon" href="./img/ico/favicon32x32.png">

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
  <![endif]-->
</head>

<body class=" ">

<div id="wrapper">

  <header class="navbar navbar-inverse" role="banner">

    <div class="container">

      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <%= image_tag "mobilemenu-logo.svg", alt: 'pocketSOHO', id: "logo2"%>
          <%= image_tag "mobilemenu-logo1.svg", alt: 'pocketSOHO', id: "logo3"%>
        </button>

          <a href="http://www.pocketsoho.com" class="navbar-brand navbar-brand-img">
          <%= image_tag "logo.svg", alt: 'pocketSOHO', id: "logo"%>
        </a>
      </div> <!-- /.navbar-header -->


      <nav class="collapse navbar-collapse" role="navigation">

           <ul class="nav navbar-nav noticebar navbar-left">

          <li class="dropdown">
            <%= link_to root_path do %>
              <i class="fa fa-home ui-tooltip" data-toggle="tooltip" data-placement="bottom" title="home"></i>
            <% end %>
          </li>

          <li class="dropdown">
            <%= link_to user_conversations_path(@user) do  %>
              <i class="fa fa-envelope ui-tooltip" data-toggle="tooltip" data-placement="bottom" title="my messages"></i>
            <% end %>
          </li>

          <li class="dropdown">
            <%= link_to appointments_path do  %>
              <i class="fa fa-calendar ui-tooltip" data-toggle="tooltip" data-placement="bottom" title="my appointments"></i>
            <% end %>
          </li>

           <li class="dropdown">
            <%= link_to invoices_path do  %>
              <i class="fa fa-dollar ui-tooltip" data-toggle="tooltip" data-placement="bottom" title="my payments"></i>
            <% end %>
            </a>
          </li>

        </ul>

        <ul class="nav navbar-nav navbar-right">

           <li>
            <a class="hello" href="#">Hello, <%= @user.first_name %></a>
          </li>

          <li class="dropdown navbar-profile">
            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
              <%= image_tag @user.image_url, alt: '', class: "navbar-profile-avatar" %>
              <span class="navbar-profile-label"><%= @user.email %> &nbsp;</span>
              <i class="fa fa-caret-down"></i>
            </a>

            <ul class="dropdown-menu" role="menu">

              <li>
                <%= link_to user_path(@user) do %>
                    <i class="fa fa-user"></i>
                    &nbsp;&nbsp;My Profile
                <% end %>
                </a>
              </li>

              <!-- <li>
                <a href="./page-pricing.html">
                  <i class="fa fa-dollar"></i>
                  &nbsp;&nbsp;Plans & Billing
                </a>
              </li> -->

              <li>
                <a href="./page-settings.html">
                  <i class="fa fa-cogs"></i>
                  &nbsp;&nbsp;Settings
                </a>
              </li>

              <li class="divider"></li>

              <li>
                <%= link_to  destroy_user_session_path, :method => :delete do  %>
                  <i class="fa fa-sign-out"></i>
                  &nbsp;&nbsp;Logout
                <% end %>
              </li>

            </ul>

          </li>

        </ul>

      </nav>

    </div> <!-- /.container -->

  </header>


  <%= yield %>

</div> <!-- /#wrapper -->

<footer class="footer">
  <div class="container">
    <p class="copyright pull-left">Copyright &copy; 2014 pocketSOHO.</p>
  </div>
</footer>


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Core JS -->
<%= javascript_include_tag "http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js" %>

<!--[if lt IE 9]>
<script src="./js/libs/excanvas.compiled.js"></script>
<![endif]-->
<!-- App JS -->
<%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js" %>
<%= javascript_include_tag "mvpready-core" %>
<%= javascript_include_tag "mvpready-admin" %>
<%= javascript_include_tag "welcome" %>
<%= javascript_include_tag "chart" %>

</body>
</html>
