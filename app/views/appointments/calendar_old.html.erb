<h2 id="month">
  <%= link_to "<", date: @date.prev_month %>
  <%= @date.strftime("%B %Y") %>
  <%= link_to ">", date: @date.next_month %>
</h2>
<%= calendar @date do |date| %>
    <%= date.day %>
      <% if @appointments_by_date[date] %>
        <ul>
          <% @appointments_by_date[date].each do |appt| %>
              <li><%= link_to "Appt", appointment_path( appt.id ) %></li>
          <% end %>
        </ul>
      <% end %>
<% end %>


                <span id="custom-prev" class="custom-prev">
                <%= link_to date: @date.prev_month do %>
                  <span></span>
                <% end %>
                </span>

                <span id="custom-next" class="custom-next">
                <%= link_to date: @date.next_month do %>
                  <span></span>
                <% end %>
              </span>
