<%= form_for @appointment do |f| %>
  <div class="field">
    <%= f.label :customer_id %><br />
    <%= f.text_field :customer_id %>
  </div>
  <div class="field">
    <%= f.label :business_owner_id %><br />
    <%= f.text_field :business_owner_id %>
  </div>
  <div class="field">
    <%= f.label :business_id %><br />
    <%= f.text_area :business_id %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_area :date %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.text_area :time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

