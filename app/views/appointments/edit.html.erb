<div class="newmessage-content content">

    <div class="container">

      <div class="row">

        <div class="col-md-6 col-md-push-3 col-sm-8 col-sm-push-2 ">

          <div class="portlet">

            <h2 class="portlet-title">
              <u>Edit Appointment with <%= @appt_person.first_name %> <%= @appt_person.last_name %></u>
            </h2>

            <div class="portlet-body">

              <div class="form-group">

                <%= simple_form_for @appointment, url: { action: "update"} do |f| %>
                  <label>Subject: </label>
                  <%= f.input :subject, label: false, input_html: {class: 'form-control', cols: '10', rows: '5'}, wrapper_html: { class: 'form-group' } %>

                  <label>Note: </label>
                  <%= f.input :notes, label: false, input_html: {class: 'form-control', cols: '10', rows: '5'}, wrapper_html: { class: 'form-group' } %>
                  <%= f.input :time, input_html: {class: 'form-control appt-time'}, wrapper_html: { class: 'form-group' }  %>
                  <div class="form-group">
                    <%= f.button :submit, class: 'btn btn-primary', id: 'update-appt' %>
                     &nbsp;
                    <%= button_to 'Delete Appointment', @appointment, confirm: 'Are you sure you want to delete this appointment?', :method => :delete, id: 'delete-appt', class: 'btn btn-default' %>
                  </div>
                <% end %>
              </div> <!-- /.form-group -->

            </div> <!-- /.portlet-body -->

          </div> <!-- /.portlet -->

        </div> <!-- /.col -->

      </div> <!-- /.row -->

    </div> <!-- /.container -->



  </div> <!-- .content -->
