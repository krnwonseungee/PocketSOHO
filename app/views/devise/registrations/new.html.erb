<div class="account-wrapper">

    <div class="account-body">

      <h3>Get Started with a Free Account.</h3>

      <h5>Sign up in 30 seconds. No credit card required.</h5>

      <div class="row">

        <div class="col-sm-6">
          <%= link_to user_omniauth_authorize_path(:linkedin), { class: "btn btn-twitter btn-block" } do %>
            <i class="fa fa-linkedin"></i>
            &nbsp;&nbsp;Login with LinkedIn
          <% end %>
        </div> <!-- /.col -->

        <div class="col-sm-6">
          <%= link_to user_omniauth_authorize_path(:facebook), { class: 'btn btn-facebook btn-block' } do %>
            <i class="fa fa-facebook"></i>
            &nbsp;&nbsp;Login with Facebook
          <% end %>
        </div> <!-- /.col -->

      </div> <!-- /.row -->

      <%= simple_form_for(resource, as: resource_name, html: { class: 'form account-form' }, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
          <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'form-control' } %>
        </div>

        <div class="form-group">
          <%= f.input :password, required: true, autofocus: true, label: false, placeholder: 'Password', input_html: { class: 'form-control' } %>
        </div>

        <div class="form-group">
          <%= f.input :password_confirmation, required: true, autofocus: true, label: false, placeholder: 'Password Confirmation', input_html: { class: 'form-control' } %>
        </div>

        <div class="form-group">
          <%= f.input :type, collection: ["BusinessOwner", "Customer"], input_html: { class: 'form-control' }, label: 'Please choose the account'  %>
        </div>

        <div class="form-group">
          <label class="checkbox-inline">
          <input type="checkbox" class="" value="" tabindex="5"> I agree to the <a href="javascript:;" target="_blank">Terms of Service</a> &amp; <a href="javascript:;" target="_blank">Privacy Policy</a>
          </label>
        </div> <!-- /.form-group -->

        <div class="form-group">
          <button type="submit" class="btn btn-secondary btn-block btn-lg" tabindex="6">
          Create My Account &nbsp; <i class="fa fa-play-circle"></i>
          </button>
        </div> <!-- /.form-group -->

      <% end %>

    </div> <!-- /.account-body -->

    <div class="account-footer">
      <p>
      Already have an account? &nbsp;
      <a href="/users/sign_in" class="">Login to your Account!</a>
      </p>
    </div> <!-- /.account-footer -->

  </div> <!-- /.account-wrapper -->
