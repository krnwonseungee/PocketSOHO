<div class="setting-content content">

    <div class="container">

      <div class="layout layout-main-right layout-stack-sm">




        <div class="col-md-9 col-sm-8 layout-main">

          <div id="settings-content" class="tab-content stacked-content">

            <div class="tab-pane fade in active" id="profile-tab">

              <h3 class="content-title"><u><%= @business.name %></u></h3>

              <br><br>

              <form action="./page-settings.html" class="form-horizontal">

                <div class="form-group">

                  <div class="col-md-7">
                    <div class="fileupload fileupload-new" data-provides="fileupload">
                        <%= image_tag( @business.image_url, class: 'biz-owner-img') %>
                    </div> <!-- /.fileupload -->

                  </div> <!-- /.col -->

                </div> <!-- /.form-group -->

                <ul class="icons-list">
                  <li><i class="icon-li fa fa-map-marker"></i><%= @business.city %>, <%= @business.state %></li>
                  <li>  <p><%= @business.description %></p></li>
                  <li><i class="icon-li fa fa-heart"></i> Owner(S)</li>
                  <li><%= link_to user_path( @biz_owner.id ) do %><%= image_tag( @biz_owner.image_url, :class => 'bizprofile profile-avatar-img thumbnail' ) %><% end %></li>
                  <li><%= link_to user_path( @biz_owner.id ) do %>Janet Yi <%=  "(you)" if @biz_owner.id == @user.id %><% end %></li>
                </ul>

              </form>

            </div> <!-- /.tab-pane -->

          </div> <!-- /.tab-content -->

        </div> <!-- /.col -->

      </div> <!-- /.row -->


    </div> <!-- /.container -->

  </div> <!-- .content -->
