<h1>Create New Business</h1>

<%= form_for @new_business, url: {action: "create"}, html: {class: "new_business"} do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :slogan %><br />
      <%= f.text_field :slogan %>
    </div>
    <div class="field">
      <%= f.label :image_url %><br />
      <%= f.text_field :image_url %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="actions">
      <p><%= f.submit "Create" %></p>
    </div>
<% end %>


