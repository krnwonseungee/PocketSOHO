<div class="newmessage-content content">

    <div class="container">

      <div class="row">

        <div class="col-md-6 col-md-push-3 col-sm-8 col-sm-push-2 ">

          <div class="portlet">

            <h2 class="portlet-title">
              <u>Edit <%= @business.name %></u>
            </h2>

            <div class="portlet-body">

              <div class="form-group">

                <%= simple_form_for @business, url: { action: "update"} do |f| %>
                  <label>Description: </label>
                  <%= f.input :description, label: false, input_html: {class: 'form-control', cols: '10', rows: '5'}, wrapper_html: { class: 'form-group' } %>
                  <%= f.input :city, input_html: {class: 'form-control'}, wrapper_html: { class: 'form-group' }  %>
                  <%= f.input :state, input_html: {class: 'form-control'}, wrapper_html: { class: 'form-group' }  %>
                  <div class="form-group">
                    <%= f.button :submit, class: 'btn btn-primary', id: 'update-appt' %>
                  </div>
                <% end %>
              </div> <!-- /.form-group -->

            </div> <!-- /.portlet-body -->

          </div> <!-- /.portlet -->

        </div> <!-- /.col -->

      </div> <!-- /.row -->

    </div> <!-- /.container -->



  </div> <!-- .content -->
