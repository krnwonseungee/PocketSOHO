<body class=" ">

<div id="wrapper">

  <header class="navbar navbar-inverse" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
            <%= image_tag "landing/mobilemenu-logo.svg", alt: 'pocketSOHO', id: "logo2"%>
            <%= image_tag "landing/mobilemenu-logo1.svg", alt: 'pocketSOHO', id: "logo3"%>
        </button>
        <%= link_to root_path, {class: 'navbar-brand navbar-brand-img'} do %>
          <%= image_tag "logo.svg", alt: 'pocketSOHO', id: "logo"%>
        <% end %>
      </div>
      <nav id="main-nav" class="collapse navbar-collapse" role="navigation">
        <ul class="nav navbar-nav navbar-right mainnav-menu">
          <li>
            <%= link_to "LOG IN", new_user_session_path, {id: 'nav-login-button', class: 'btn btn-primary'} %>
