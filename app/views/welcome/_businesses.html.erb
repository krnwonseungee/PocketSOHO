<h3>My Business</h3>

<table>
  <% @businesses.each do |business| %>
    <tr class="biz-row">

        <td class="biz-name-col"><%= link_to business_path(business) do %><%= business.name %><% end %></td>
        <td class="biz-img-col"><%= link_to business_path(business) do %><%= image_tag( business.image_url, :class => 'biz-img' ) %><% end %></td>
        <td class="add-cust-col"><i class="fa fa-plus"></i> <%= link_to "Add New Customers", new_user_path %></td>

      <td class="biz-slogan-col"><%= link_to 'Edit', edit_business_path(business.id)  %></td>

    </tr>
  <% end %>
</table>
