<h1>My Inbox</h1>
<input type="search" placeholder="Search for Specific Messages">
<%= link_to "Create New Message", new_user_message_path %>
<table>
<% @user.messages.each do |message| %>
  <tr>
    <td>
      <%= link_to user_message_path(@user, message.id) do %>
      <%= message.text %>
      <% end %>
    </td>
    <td>
      <% if @user.type == "BusinessOwner" %>
        <%= Customer.find(message.customer_id).first_name %>
      <% else  %>
        <%= BusinessOwner.find(message.business_owner_id).first_name %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
